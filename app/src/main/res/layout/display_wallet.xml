<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/show_history_as_chart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="showHistoryAsChart"
        android:text="@string/show_history_as_chart" />

    <TextView
        android:id="@+id/address_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="address_view"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/final_balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="final_balance: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/number_of_transactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="number_of_transactions: " />

    <TextView
        android:id="@+id/total_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="total_received: " />

    <TextView
        android:id="@+id/total_sent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="total_sent: " />

    <Button
        android:id="@+id/saveCurrentAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="saveCurrentAddress"
        android:text="save current address" />

    <Button
        android:id="@+id/checkOtherAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="checkOtherAdress"
        android:text="Check Other Adress" />
</LinearLayout>